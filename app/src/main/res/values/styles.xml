<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<style name="edtApperence" parent="@android:style/Widget.EditText">
    <item name="android:background">@drawable/test</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:layout_marginRight">30dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:elevation">2dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:height">45dp</item>
    <item name="android:textColorHint">@color/hint_edt</item>
</style>
    <style name="btnApperence" parent="android:style/Widget.Button">
        <item name="android:background">@drawable/shape_btn_connect</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
    </style>
</resources>
