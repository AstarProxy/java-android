<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_register1">

    <EditText
        style="@style/edtApperence"
        android:hint="@string/user"
        android:layout_marginTop="100dp"
        android:id="@+id/edt_user"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <EditText
        style="@style/edtApperence"
        android:hint="@string/pass"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edt_user"
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <EditText
        style="@style/edtApperence"
        android:hint="@string/server"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edt_pass"
        android:id="@+id/edt_server"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <EditText
        style="@style/edtApperence"
        android:hint="@string/port"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edt_server"
        android:id="@+id/edt_port"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <Button
        style="@style/btnApperence"
        android:id="@+id/btn_connect"
        android:text="@string/connect"
        android:layout_marginTop="80dp"
        android:layout_below="@id/edt_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>